							"});\r",
							"\r",
							"pm.test(\"Verify the checkin data is =2018-01-01\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.bookingdates.checkin).to.eql(\"2018-01-01\");\r",
